<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView 
        android:id="@+id/tv_product_name"
        style="@style/fw"
        android:textColor="@color/white"
        android:background="@color/product_name_bg_color"
        android:textSize="@dimen/text_font_18"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingBottom="5dip"
        android:paddingTop="5dip"
        android:maxLines="2"
        android:ellipsize="end"
         />




         <com.bm.widget.TextViewStrikeThru
                android:id="@+id/tv_originalCost"
                style="@style/ww"
                android:text="￥0.00"
                android:textColor="@color/group_purchase_bg"
                android:textSize="@dimen/text_font_16" />



         <com.bm.widget.ClearEditText
                android:id="@+id/et_seach_content"
                android:layout_width="0dip"
                android:layout_height="35dip"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/city_search"
                android:drawablePadding="10dip"
                android:hint="请输入关键词"
                android:paddingLeft="10dip"
                android:paddingRight="8dip"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/text_font_17" /> 
</LinearLayout>